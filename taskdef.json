{
    "family": "launch-test-app",
    "containerDefinitions": [
        {
            "image": "750037626691.dkr.ecr.ap-southeast-1.amazonaws.com/http-app:latest",
            "name": "bwce-test-app",
            "cpu": 10,
            "memory": 512,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8080,
                    "hostPort": 8080
                },
		{
                    "containerPort": 7777,
                    "hostPort": 7777
                }
            ],
            "environment": [
                {
                    "name": "BW_LOGLEVEL",
                    "value": "DEBUG"
                },
		    {
                    "name": "BW_APP_MONITORING_CONFIG",
                    "value": "{\"url\": \"http://54.169.231.218:8080\"}"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "bwce-app-log",
                    "awslogs-region": "ap-southeast-1",
                    "awslogs-stream-prefix": "bwce"
                }
	    }
        }
    ]
}
